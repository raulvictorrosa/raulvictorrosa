{
  "extends": [
    "next/core-web-vitals",
    "plugin:prettier/recommended",
    "plugin:jest-dom/recommended"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "import/order": [
      "warn",
      {
        "groups": [
          "builtin",
          [
            "external",
            "internal"
          ],
          "parent",
          "sibling"
        ],
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ],
    "sort-imports": [
      "warn",
      {
        "ignoreDeclarationSort": true,
        "ignoreMemberSort": false,
        "ignoreCase": true
      }
    ]
  }
}
